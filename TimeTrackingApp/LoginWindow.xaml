<Window x:Class="TimeTrackingApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9FC"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        MinWidth="350" MinHeight="410" Width="350" UseLayoutRounding="True" 
             SnapsToDevicePixels="True">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4A90E2"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#50E3C2"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#D0D7E5"/>
        <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>


 
    </Window.Resources>



    <Grid SnapsToDevicePixels="True">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="8" BorderBrush="Transparent" Background="Transparent" />
        <!-- Верхняя панель с кнопкой закрытия -->
        <Border Background="{StaticResource PrimaryBrush}" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" MouseDown="Header_MouseDown">
            <Grid HorizontalAlignment="Right" SnapsToDevicePixels="True">
                <Button Content="X" Background="Transparent" Foreground="White" Width="30" Height="30" Click="CloseButton_Click" BorderBrush="Transparent" Style="{StaticResource PrimaryButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Основной контент окна -->
        <Grid Grid.Row="1" VerticalAlignment="Top" SnapsToDevicePixels="True">
            <Border Background="{StaticResource CardBackgroundBrush}"
                Padding="24"
                Margin="40,40,40,15"
                CornerRadius="12"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.25"/>
            </Border.Effect>
            <StackPanel>
                    <TextBlock Text="Добро пожаловать" FontSize="20" Margin="0,0,0,16" HorizontalAlignment="Center" Style="{StaticResource ModernTextBlock}"/>
                    <TextBlock Text="Логин:" Style="{StaticResource ModernTextBlock}"/>
                    <TextBox x:Name="LoginBox" Height="39" Style="{StaticResource STextBox}"/>

                    <TextBlock Text="Пароль:" Style="{StaticResource ModernTextBlock}"/>
                    <PasswordBox x:Name="PasswordBox" Height="39" Style="{StaticResource StyledPasswordBox}"/>
                <Button Content="Войти" Click="Login_Click" Style="{StaticResource ModernButton}" Height="37" Margin="0,30,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>