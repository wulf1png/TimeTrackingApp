<UserControl x:Class="TimeTrackingApp.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:TimeTrackingApp"
             Background="{DynamicResource SoftBackground}" UseLayoutRounding="True" 
             SnapsToDevicePixels="True">
    <UserControl.Resources>

        <LinearGradientBrush x:Key="SoftBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F7F9FC" Offset="0" />
            <GradientStop Color="#E3F2FD" Offset="1" />
        </LinearGradientBrush>

        <local:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>

        <Style x:Key="StyledListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        
        <!-- Цвета -->
        <SolidColorBrush x:Key="PrimaryBrush"       Color="#4A90E2"/>
        <SolidColorBrush x:Key="BorderBrush"        Color="#D0D7E5"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBrush"          Color="#2C3E50"/>

    </UserControl.Resources>

    <Grid Margin="20" SnapsToDevicePixels="True">
        <TextBlock Text="Регистрация нового пользователя"
           Style="{StaticResource TitleText}"
           />
        
        <Border Background="{StaticResource CardBackgroundBrush}"
                CornerRadius="12"
                Padding="24"
                Margin="40"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>

                

                <!-- Параметры пользователя: две колонки -->
                <Grid Margin="0,0,0,20" SnapsToDevicePixels="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Имя -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernTextBlock}" Text="Имя:"/>
                    <TextBox    Grid.Row="0" Grid.Column="1" Style="{StaticResource STextBox}" x:Name="FirstNameBox" Margin="0,0,0,10"/>

                    <!-- Фамилия -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource ModernTextBlock}" Text="Фамилия:"/>
                    <TextBox    Grid.Row="1" Grid.Column="1" Style="{StaticResource STextBox}" x:Name="LastNameBox" Margin="0,0,0,10"/>

                    <!-- Отчество -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource ModernTextBlock}" Text="Отчество:"/>
                    <TextBox    Grid.Row="2" Grid.Column="1" Style="{StaticResource STextBox}" x:Name="PatronymicBox" Margin="0,0,0,10"/>

                    <!-- Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource ModernTextBlock}" Text="Email:"/>
                    <TextBox    Grid.Row="3" Grid.Column="1" Style="{StaticResource STextBox}" x:Name="EmailBox" Margin="0,0,0,10"/>
                </Grid>

                <!-- Вторая группа полей -->
                <Grid Margin="0,0,0,20" SnapsToDevicePixels="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Телефон -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernTextBlock}" Text="Телефон:"/>
                    <TextBox    Grid.Row="0" Grid.Column="1" Style="{StaticResource STextBox}" x:Name="PhoneBox" Margin="0,0,0,10"/>

                    <!-- Логин -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource ModernTextBlock}" Text="Логин:"/>
                    <TextBox    Grid.Row="1" Grid.Column="1" Style="{StaticResource STextBox}" x:Name="LoginBox" Margin="0,0,0,10"/>

                    <!-- Пароль -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource ModernTextBlock}" Text="Пароль:"/>
                    <PasswordBox Grid.Row="2" Grid.Column="1" Style="{StaticResource StyledPasswordBox}" x:Name="PasswordBox"/>
                </Grid>

                <!-- Роль и кнопка -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <ComboBox x:Name="RoleBox" Margin="0,0,20,0"
                              Width="160"
                              Style="{StaticResource ModernComboBox_NULL}"
                              SelectedIndex="0">
                        <ComboBoxItem Content="employee"/>
                        <ComboBoxItem Content="manager"/>
                        <ComboBoxItem Content="accountant"/>
                        <ComboBoxItem Content="admin"/>
                    </ComboBox>

                    <Button Content="Зарегистрировать"
                            Style="{StaticResource ModernButton}"
                            Width="160"
                            Click="Register_Click"/>
                </StackPanel>

                <Separator Margin="0,10"/>

                <TextBlock Text="Логи системы" FontSize="16" FontWeight="SemiBold" Foreground="#444" Style="{StaticResource ModernTextBlock}"/>
                <ListBox x:Name="LogsBox" Height="120" Style="{StaticResource StyledListBox}" />

            </StackPanel>
            
        </Border>
        
    </Grid>
    
    
</UserControl>